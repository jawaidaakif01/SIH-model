<%- include('partials/header') %>

<div class="container">
    <div class="form-container">
        <h2><%= t.login_title %></h2>
        <form action="/auth/user/login" method="POST">
            <div class="form-group">
                <label><%= t.email_label %></label>
                <input name="email" type="email" placeholder="<%= t.email_placeholder %>" required>
            </div>
            <div class="form-group">
                <label><%= t.password_label %></label>
                <input name="password" type="password" placeholder="<%= t.password_placeholder %>" required>
            </div>
            <button type="submit" class="btn btn-secondary" style="width: 100%;"><%= t.login_button %></button>
        </form>
        <div class="switch-link">
            <a href="/signup" class="btn btn-outline"><%= t.login_switch_text %></a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>