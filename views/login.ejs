<%- include('partials/header') %>
<div class="container">
    <div class="form-container">
        <h2><%= t.volunteer_login_title %></h2>
        <form action="/auth/volunteer/login" method="POST">
            <div class="form-group">
                <label><%= t.email_label %></label>
                <input name="email" type="email" placeholder="<%= t.email_placeholder %>" required>
            </div>
            <div class="form-group">
                <label><%= t.password_label %></label>
                <input name="password" type="password" placeholder="<%= t.password_placeholder %>" required>
            </div>
            <button type="submit" class="btn btn-secondary" style="width: 100%;"><%= t.volunteer_login_button %></button>
        </form>
        <div class="switch-link">
            <a href="/volunteer" class="btn btn-outline"><%= t.volunteer_login_switch %></a>
        </div>
    </div>
</div>
<%- include('partials/footer') %>