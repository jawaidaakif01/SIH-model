<head>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header class="header">
        <div class="logo-section">
            <a href="/" class="logo-link">
                <span class="logo-text">HydroShield</span>
            </a>
        </div>

        <nav class="main-nav">
            <a href="/contact">Contact Us</a>
        </nav>

        <div class="user-actions">
            <% if (volunteer) { %>
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/auth/logout" class="nav-link">Logout</a>
                <% } else if (user) { %>
                    <a href="/user-dashboard" class="nav-link">Dashboard</a>
                    <a href="/auth/logout" class="nav-link">Logout</a>
                    <% } else { %>
                        <div class="language-selector-btn">
                            <span class="language-label-nav">
                                <%= t.select_language_label %>
                            </span>

                            <select id="languageSwitcher">
                                <option value="en" <%=currentLang==='en' ? 'selected' : '' %>>English</option>
                                <option value="as" <%=currentLang==='as' ? 'selected' : '' %>>অসমীয়া</option>
                                <option value="bn" <%=currentLang==='bn' ? 'selected' : '' %>>বাংলা</option>
                            </select>
                        </div>
                        <script>
                            document.addEventListener('DOMContentLoaded', () => {
                                const langSwitcher = document.getElementById('languageSwitcher');
                                if (langSwitcher) {
                                    langSwitcher.addEventListener('change', function () {
                                        const selectedLang = this.value;
                                        fetch('/language/set', {
                                            method: 'POST',
                                            headers: { 'Content-Type': 'application/json' },
                                            body: JSON.stringify({ language: selectedLang })
                                        }).then(() => {
                                            window.location.reload();
                                        });
                                    });
                                }
                            });
                        </script>
                        <% } %>
        </div>
    </header>