<%- include('partials/header') %>

<div class="container">
    <h1 class="result-page-title">Report Result</h1>

    <div class="result-grid">
        
        <div class="result-card submitted-card">
            <h3>Submitted Data</h3>
            <div class="data-list">
                <div class="data-row">
                    <span class="data-label">Season</span>
                    <span class="data-val"><%= report.season %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Water Source</span>
                    <span class="data-val"><%= report.waterSource %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">pH</span>
                    <span class="data-val"><%= report.ph %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Turbidity (NTU)</span>
                    <span class="data-val"><%= report.turbidity %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">TDS (ppm)</span>
                    <span class="data-val"><%= report.tds %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Total Coliform</span>
                    <span class="data-val"><%= report.totalColiform %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Arsenic (Âµg/L)</span>
                    <span class="data-val"><%= report.arsenic %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Nitrate (mg/L)</span>
                    <span class="data-val"><%= report.nitrate %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Age Group</span>
                    <span class="data-val"><%= report.ageGroup %></span>
                </div>
                <div class="data-row">
                    <span class="data-label">Gender</span>
                    <span class="data-val"><%= report.gender %></span>
                </div>
            </div>
        </div>

        <div class="result-card prediction-card">
            <h3>ML Predictions</h3>
            
            <div class="prediction-content">
                <div class="pred-group">
                    <span class="pred-label">Disease</span>
                    <h2 class="pred-value"><%= report.predictedDisease %></h2>
                </div>

                <div class="pred-group">
                    <span class="pred-label">Severity</span>
                    <% if (report.predictedSeverity === 'Low' || report.predictedSeverity === 'Mild') { %>
                        <span class="badge severity-mild">Mild</span>
                    <% } else if (report.predictedSeverity === 'Moderate') { %>
                        <span class="badge severity-moderate">Moderate</span>
                    <% } else { %>
                        <span class="badge severity-severe">Severe</span>
                    <% } %>
                </div>

                <a href="/user-dashboard" class="btn btn-gradient">Back to Dashboard</a>
                <a href="/precautions" class="btn btn-secondary-outline" style="margin-top: 10px; width: 100%; display:block;">View Precautions</a>            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>