<%- include('partials/header') %>

<div class="container">
    <div class="form-container">
        <h2><%= t.signup_title %></h2>
        <form action="/auth/user/register" method="POST">
            <div class="form-group">
                <label><%= t.username_label %></label>
                <input name="name" type="text" placeholder="<%= t.username_placeholder %>" required>
            </div>
            <div class="form-group">
                <label><%= t.email_label %></label>
                <input name="email" type="email" placeholder="<%= t.email_placeholder %>" required>
            </div>
            <div class="form-group">
                <label><%= t.password_label %></label>
                <input name="password" type="password" placeholder="<%= t.password_placeholder_create %>" required>
            </div>
            <div class="form-group">
                <label><%= t.gender_label %></label>
                <select name="gender">
                    <option value="Female"><%= t.gender_female %></option>
                    <option value="Male"><%= t.gender_male %></option>
                    <option value="Other"><%= t.gender_other %></option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;"><%= t.signup_button %></button>
        </form>
        <div class="switch-link">
            <a href="/health" class="btn btn-outline"><%= t.signup_switch_text %></a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>