<%- include('partials/header') %>

<div class="container">
    <div class="dashboard-welcome">
        <h1><%= t.dashboard_title %></h1>
        <p><%= t.dashboard_subtitle %></p>
    </div>

    <div class="form-container">
        <form action="/report/submit" method="POST">
            <div class="form-grid">
                <div class="form-group">
                    <label for="ph"><%= t.ph_label %></label>
                    <input type="number" step="0.1" id="ph" name="ph" required>
                </div>
                <div class="form-group">
                    <label for="turbidity"><%= t.turbidity_label %></label>
                    <input type="number" step="0.1" id="turbidity" name="turbidity" required>
                </div>
                <div class="form-group">
                    <label for="tds"><%= t.tds_label %></label>
                    <input type="number" step="1" id="tds" name="tds" required>
                </div>
                <div class="form-group">
                    <label for="totalColiform"><%= t.coliform_label %></label>
                    <input type="number" step="1" id="totalColiform" name="totalColiform" required>
                </div>
                 <div class="form-group">
                    <label for="arsenic"><%= t.arsenic_label %></label>
                    <input type="number" step="0.1" id="arsenic" name="arsenic" required>
                </div>
                <div class="form-group">
                    <label for="nitrate"><%= t.nitrate_label %></label>
                    <input type="number" step="0.1" id="nitrate" name="nitrate" required>
                </div>

                <div class="form-group">
                    <label for="season"><%= t.season_label %></label>
                    <select id="season" name="season" required>
                        <option value="Rainy"><%= t.season_rainy %></option>
                        <option value="Summer"><%= t.season_summer %></option>
                        <option value="Winter"><%= t.season_winter %></option>
                        <option value="Post-Monsoon"><%= t.season_post_monsoon %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="waterSource"><%= t.source_label %></label>
                    <select id="waterSource" name="waterSource" required>
                        <option value="Borewell"><%= t.source_borewell %></option>
                        <option value="River"><%= t.source_river %></option>
                        <option value="Pond"><%= t.source_pond %></option>
                        <option value="Public Tap"><%= t.source_tap %></option>
                        <option value="Other"><%= t.source_other %></option>
                    </select>
                </div>
                 <div class="form-group">
                    <label for="wasteDisposal"><%= t.waste_label %></label>
                    <select id="wasteDisposal" name="wasteDisposal" required>
                        <option value="None"><%= t.waste_none %></option>
                        <option value="Open Defecation"><%= t.waste_open %></option>
                        <option value="Septic Tank"><%= t.waste_septic %></option>
                        <option value="Municipal"><%= t.waste_municipal %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="toiletAccess"><%= t.toilet_label %></label>
                    <select id="toiletAccess" name="toiletAccess" required>
                        <option value="Yes"><%= t.toilet_yes %></option>
                        <option value="No"><%= t.toilet_no %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ageGroup"><%= t.age_label %></label>
                    <select id="ageGroup" name="ageGroup" required>
                        <option value="0-10"><%= t.age_0_10 %></option>
                        <option value="11-20"><%= t.age_11_20 %></option>
                        <option value="21-40"><%= t.age_21_40 %></option>
                        <option value="41-60"><%= t.age_41_60 %></option>
                        <option value="60+"><%= t.age_60_plus %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="gender"><%= t.gender_label %></label>
                    <select id="gender" name="gender" required>
                        <option value="Male"><%= t.gender_male %></option>
                        <option value="Female"><%= t.gender_female %></option>
                        <option value="Other"><%= t.gender_other %></option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;"><%= t.dashboard_submit_button %></button>
        </form>
    </div>
</div>

<style>
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    @media (max-width: 600px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<%- include('partials/footer') %>