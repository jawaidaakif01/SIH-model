<%- include('partials/header') %>

<div class="container">
    <div class="dashboard-welcome">
        <h1>Water Quality Report</h1>
        <p>Please fill out the form below to predict health risks based on your water sample.</p>
    </div>

    <div class="form-container">
        <form action="/report/submit" method="POST">
            <div class="form-grid">
                <div class="form-group">
                    <label for="ph">pH Level (0-14)</label>
                    <input type="number" step="0.1" id="ph" name="ph" required>
                </div>
                <div class="form-group">
                    <label for="turbidity">Turbidity (NTU)</label>
                    <input type="number" step="0.1" id="turbidity" name="turbidity" required>
                </div>
                <div class="form-group">
                    <label for="tds">TDS (ppm)</label>
                    <input type="number" step="1" id="tds" name="tds" required>
                </div>
                <div class="form-group">
                    <label for="totalColiform">Total Coliform (MPN/100ml)</label>
                    <input type="number" step="1" id="totalColiform" name="totalColiform" required>
                </div>
                 <div class="form-group">
                    <label for="arsenic">Arsenic (Âµg/L)</label>
                    <input type="number" step="0.1" id="arsenic" name="arsenic" required>
                </div>
                <div class="form-group">
                    <label for="nitrate">Nitrate (mg/L)</label>
                    <input type="number" step="0.1" id="nitrate" name="nitrate" required>
                </div>

                <div class="form-group">
                    <label for="season">Season</label>
                    <select id="season" name="season" required>
                        <option value="Rainy">Rainy</option>
                        <option value="Summer">Summer</option>
                        <option value="Winter">Winter</option>
                        <option value="Post-Monsoon">Post-Monsoon</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="waterSource">Water Source</label>
                    <select id="waterSource" name="waterSource" required>
                        <option value="Borewell">Borewell</option>
                        <option value="River">River</option>
                        <option value="Pond">Pond</option>
                        <option value="Public Tap">Public Tap</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                 <div class="form-group">
                    <label for="wasteDisposal">Waste Disposal Method</label>
                    <select id="wasteDisposal" name="wasteDisposal" required>
                        <option value="None">None</option>
                        <option value="Open Defecation">Open Defecation</option>
                        <option value="Septic Tank">Septic Tank</option>
                        <option value="Municipal">Municipal</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="toiletAccess">Toilet Access</label>
                    <select id="toiletAccess" name="toiletAccess" required>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ageGroup">Age Group</label>
                    <select id="ageGroup" name="ageGroup" required>
                        <option value="0-10">0-10 years</option>
                        <option value="11-20">11-20 years</option>
                        <option value="21-40">21-40 years</option>
                        <option value="41-60">41-60 years</option>
                        <option value="60+">60+ years</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <select id="gender" name="gender" required>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="submit-btn">Submit for Prediction</button>
        </form>
    </div>
</div>

<style>
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    @media (max-width: 600px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<%- include('partials/footer') %>