<%- include('partials/header') %>

<div class="container">
  <div class="form-container">
    <h2 id="volunteerTitle">Volunteer Sign-Up</h2>
    <form action="/auth/volunteer/register" method="POST">
      <div class="form-group">
        <label id="usernameLabel">Username</label>
        <input id="usernameInput" name="name" type="text" placeholder="Enter your username" required>
      </div>
      <div class="form-group">
        <label id="phoneLabel">Phone Number / Email</label>
        <input id="phoneInput" name="email" type="text" placeholder="Enter phone number or email" required>
      </div>
       <div class="form-group">
        <label id="passwordLabel">Password</label>
        <input id="passwordInput" name="password" type="password" placeholder="Enter your password" required>
      </div>
      <div class="form-group">
        <label id="genderLabel">Gender</label>
        <select id="genderSelect" name="gender">
          <option value="female">Female</option>
          <option value="male">Male</option>
          <option value="other">Other</option>
        </select>
      </div>
      <button id="volunteerSubmit" type="submit" class="submit-btn">Sign Up</button>
    </form>
  </div>
</div>

<script src="/js/volunteer.js"></script>

<%- include('partials/footer') %>